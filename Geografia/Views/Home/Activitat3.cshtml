<!DOCTYPE html>
<html>
<head>
    <title>Activitat 3</title>
    <link href="../Content/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="../Content/style.css" rel="stylesheet" media="screen">
    <script src="../../Scripts/jquery-1.10.2.min.js"></script>
    <script src="../../Scripts/js/Activitat3.js"></script>
    <script src="../../Scripts/js/TakeDivs.js"></script>
</head>

<body>
    <div id="modalFinal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="bodyModal" class="modal-body">
                    @*Agafem la informació de l'activita, la nota i el nickname, a més a més, d'afegir-lo a la base de dades*@
                    @model Geografia.Models.ActivitatAlumne
                    @using (Html.BeginForm("CreateNick", "Home", FormMethod.Post))
    {
                <form>
                    <div class="form-group">
                        <h5 id="notaFinal"><span class="badge badge-secondary"></span></h5>
                        <br />
                        <label for="email">Inserta el teu nick:</label>
                        @Html.TextBoxFor(model => model.NickAlumne, new { @maxlength = "19" })
                        @Html.TextBoxFor(model => model.Nota, htmlAttributes: new { id = "notaActivitat1", type = "hidden" })
                        @Html.TextBoxFor(model => model.NomActivitat, htmlAttributes: new { @Value = "Activitat 3", type = "hidden" })
                        <input type="submit" class="btn btn-primary" value="Enviar" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No enviar</button>
                    </div>
                </form>
}
                </div>
            </div>
        </div>
    </div>

    <div id="div_act_pregunta">
        <div class="row">
            <div class="col-lg-2 "></div>
            <div class="col-lg-8">
                <div id="h3Comarca"> <h4>Selecciona la capital de la comarca: </h4> </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div id="divMapa" class="col-lg-6">
            <object id="map" data="../../svg/mapa.svg" type="image/svg+xml"></object>
        </div>

        <div class="col-lg-3 panelrespuesta">
            <div id="marcador_encerts"><h4>0/0</h4></div>
            <div id="barraProgress" class="progress position-relative">

                <div id="barraProgress1" class="progress-bar" role="progressbar"
                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                     style="width: 0%">
                    <span id="progressBarra">0%</span>
                </div>
            </div>

            <div id="informacioResultat"></div>

        </div>

        <div class="col-lg-1"></div>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <button id="button1" class=" btn btn-lg escollirCapital"></button>


            <button id="button2" class=" btn btn-lg escollirCapital"></button>

            <button id="button3" class=" btn btn-lg escollirCapital"></button>
        </div>

        <div class="col-lg-2"></div>
        
    </div>


</body>
</html>
