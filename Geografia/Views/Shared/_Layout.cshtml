<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apren Geografia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top menuSup">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LOGO", "Index", "Home", new { @class = "logoNavbar" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Activitats", "Index", "Home")</li>
                    <li>@Html.ActionLink("Resultats", "Resultats", "Home")</li>
                    <li>@Html.ActionLink("Repàs", "MapaCatalunya", "Home")</li>
                    <li>@Html.ActionLink("Qui som?", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="navbar navbar-inverse navbar-fixed-bottom menuSup footerindex">
        <div class="containerlogo">
            <a href="https://dinahosting.com/">
                <img class="imagelogo1" src="~/Content/Images/dinahosting.jpg" />
            </a>
            <a href="http://websalpunt.cat/">
                <img class="imagelogo2" src="~/Content/Images/puntcat.png" />
            </a>
        </div>
    </div>
    <div class="col-lg-1"></div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div class="separador"></div>
</body>
</html>
